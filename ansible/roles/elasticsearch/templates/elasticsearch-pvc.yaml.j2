kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: elasticsearch-volume
  annotations:
    volume.beta.kubernetes.io/storage-class: ssd-{{ aws_availability_zone }}
  namespace: kube-system
  labels:
    k8s-app: elasticsearch-logging
    kubernetes.io/cluster-service: "true"
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
